    <!-- Name -->
    <div class="mb-2">
      <label for="name" class="form-label">Full Name</label>
      <input type="text" class="form-control form-control-sm" id="name" name="name" placeholder="Enter full name" required>
    </div>

    <!-- Email -->
    <div class="mb-2">
      <label for="email" class="form-label">Email Address</label>
      <input type="email" class="form-control form-control-sm" id="email" name="email" placeholder="Enter email" required>
    </div>

    <!-- Password -->
    <div class="mb-2">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control form-control-sm" id="password" name="password" placeholder="Enter password" required>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-warning w-100 fw-bold btn-sm">Register</button>
  </form>

